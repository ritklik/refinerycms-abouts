<% content_for :body_content_title do %>
  <%= @about.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @about.name %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @about.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Job Title</h1>
    <p>
      <%=raw @about.job_title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @about.description %>
    </p>
  </section>
  <section>
    <h1>Contact Email</h1>
    <p>
      <%=raw @about.contact_email %>
    </p>
  </section>
  <section>
    <h1>Twitter Url</h1>
    <p>
      <%=raw @about.twitter_url %>
    </p>
  </section>
  <section>
    <h1>Facebook Url</h1>
    <p>
      <%=raw @about.facebook_url %>
    </p>
  </section>
  <section>
    <h1>Linkedin Url</h1>
    <p>
      <%=raw @about.linkedin_url %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="abouts">
      <% @abouts.each do |about| %>
        <li>
          <%= link_to about.name, refinery.abouts_about_path(about) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
